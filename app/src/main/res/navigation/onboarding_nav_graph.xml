<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding_nav_graph"
    app:startDestination="@id/fragment_register">
    <fragment
        android:id="@+id/fragment_register"
        android:name="com.example.dynamic_appointment_application.ui.onboarding.RegisterScreenFragment"
        tools:layout="@layout/fragment_register_screen">
        <action
            android:id="@+id/action_fragment_register_to_fragment_login"
            app:destination="@id/fragment_login" />
    </fragment>
    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.dynamic_appointment_application.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_fragment_login_to_fragment_dashboard"
            app:destination="@id/fragment_dashboard" />

    </fragment>
    <fragment
        android:id="@+id/fragment_dashboard"
        android:name="com.example.dynamic_appointment_application.ui.dashboard.DashboardFragment"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_fragment_dashboard_to_fragment_select_business"
            app:destination="@+id/fragment_select_business" />
    </fragment>

    <fragment
        android:id="@+id/fragment_select_business"
        android:name="com.example.dynamic_appointment_application.ui.dashboard.SelectBusinessFragment"
        tools:layout="@layout/fragment_select_business">
        <action
            android:id="@+id/action_fragment_select_business_to_fragment_select_professional"
            app:destination="@id/fragment_select_professional" />
    </fragment>
    <fragment
        android:id="@+id/fragment_select_professional"
        android:name="com.example.dynamic_appointment_application.ui.dashboard.SelectProfessionalFragment"
        tools:layout="@layout/fragment_select_professional"></fragment>
</navigation>